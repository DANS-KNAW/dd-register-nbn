[Unit]
Description=Dd Register Nbn Service

[Service]
ExecStart=/opt/dans.knaw.nl/dd-register-nbn/bin/dd-register-nbn server /etc/opt/dans.knaw.nl/dd-register-nbn/config.yml
# Java returns 143 even if the SIGTERM was handled correctly.
SuccessExitStatus=143
Environment="JAVA_OPTS=-Xms64m"
Environment="LC_ALL=en_US.UTF-8"

User=dd-register-nbn
Group=dd-register-nbn

[Install]
WantedBy=multi-user.target
